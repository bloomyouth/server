<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.wql.dao.UserMapper">
<!--    private String id;//用户名-->
<!--    private String name;//姓名-->
<!--    private String tel;//电话-->
<!--    private String password;//密码-->
<!--    private int state;//状态-->
    <insert id="addUser" parameterType="User">
        INSERT INTO user VALUES (#{id},#{name},#{tel},#{password},#{state});
    </insert>

    <delete id="delUser">
        DELETE FROM user WHERE id=#{id};
    </delete>

    <update id="passwordModify">
        UPDATE user SET password=#{password} WHERE id=#{id};
    </update>

    <update id="userDataModify">
        UPDATE user SET name=#{name},tel=#{tel},password=#{password} WHERE id=#{id};
    </update>

    <update id="blackUserById">
        UPDATE user SET state=0 WHERE id=#{id};
    </update>

    <update id="whiteUserById">
        UPDATE user SET state=1 WHERE id=#{id};
    </update>

    <select id="getUserById" resultType="User">
        SELECT * FROM user WHERE id=#{id};
    </select>

    <select id="getAdminById" resultType="User">
        SELECT * FROM admin WHERE id=#{id};
    </select>

    <select id="getAllUser" resultType="User">
        SELECT * FROM user;
    </select>

</mapper>